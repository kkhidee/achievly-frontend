    "info": {
        "title": "Goal planner API",
        "description": "Swagger API documentation for goal planner app",
        "version": "3.1.0",
        "contact": {}
    },
    "tags": [],
    "servers": [],
    "components": {
        "schemas": {
            "UserDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "User ID",
                        "example": 1
                    },
                    "username": {
                        "type": "string",
                        "description": "Имя пользователя",
                        "example": "Username"
                    },
                    "picture": {
                        "type": "string",
                        "description": "Изображение пользователя",
                        "example": "https://picture.com"
                    }
                },
                "required": [
                    "id",
                    "username",
                    "picture"
                ]
            },
            "BadRequest": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "description": "Error message"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error type"
                    },
                    "statusCode": {
                        "type": "number",
                        "description": "Error status code"
                    }
                },
                "required": [
                    "message",
                    "error",
                    "statusCode"
                ]
            },
            "TaskEntity": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "ID задачи"
                    },
                    "title": {
                        "type": "string",
                        "description": "Заголовок задачи"
                    },
                    "done": {
                        "type": "boolean",
                        "description": "Статус выполнения задачи",
                        "default": false
                    },
                    "note": {
                        "type": "string",
                        "description": "Примечание к задаче",
                        "nullable": true
                    },
                    "deadlineTimestamp": {
                        "type": "number",
                        "description": "Срок выполнения задачи",
                        "nullable": true
                    },
                    "doneTimestamp": {
                        "type": "number",
                        "description": "Дата выполнения задачи",
                        "nullable": true
                    }
                },
                "required": [
                    "id",
                    "title",
                    "done"
                ]
            },
            "HabitEntity": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "ID привычки"
                    },
                    "title": {
                        "type": "string",
                        "description": "Заголовок привычки"
                    },
                    "repeatDays": {
                        "description": "Дни повторения привычки",
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    },
                    "doneDays": {
                        "description": "Дни в которые привычка была выполнена",
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    },
                    "note": {
                        "type": "string",
                        "description": "Примечание к привычке",
                        "nullable": true
                    }
                },
                "required": [
                    "id",
                    "title",
                    "repeatDays"
                ]
            },
            "HistoryGoalDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "ID цели"
                    },
                    "title": {
                        "type": "string",
                        "description": "Заголовок"
                    },
                    "tasks": {
                        "description": "Задачи",
                        "nullable": true,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/TaskEntity"
                        }
                    },
                    "habits": {
                        "description": "Привычки",
                        "nullable": true,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/HabitEntity"
                        }
                    }
                },
                "required": [
                    "id",
                    "title"
                ]
            },
            "HistoryEntity": {
                "type": "object",
                "properties": {
                    "date": {
                        "type": "number",
                        "description": "Дата истории цели"
                    },
                    "goal": {
                        "description": "Цель",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/HistoryGoalDto"
                            }
                        ]
                    }
                },
                "required": [
                    "date",
                    "goal"
                ]
            },
            "GoalDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "Goal ID"
                    },
                    "type": {
                        "type": "string",
                        "description": "Тип цели",
                        "enum": [
                            "public",
                            "private"
                        ]
                    },
                    "title": {
                        "type": "string",
                        "description": "Наименование цели"
                    },
                    "status": {
                        "type": "string",
                        "description": "Статус цели",
                        "enum": [
                            "ongoing",
                            "achieved"
                        ]
                    },
                    "note": {
                        "type": "string",
                        "description": "Примечание к цели",
                        "nullable": true
                    },
                    "category": {
                        "type": "string",
                        "description": "Категория цели",
                        "enum": [
                            "education",
                            "career",
                            "finance",
                            "health",
                            "sports",
                            "relationships",
                            "travel",
                            "creativity",
                            "business",
                            "personalGrowth",
                            "charity",
                            "hobby",
                            "spirituality",
                            "ecology",
                            "socialActivity"
                        ],
                        "nullable": true
                    },
                    "tasks": {
                        "description": "Задачи",
                        "nullable": true,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/TaskEntity"
                        }
                    },
                    "habits": {
                        "description": "Привычки",
                        "nullable": true,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/HabitEntity"
                        }
                    },
                    "history": {
                        "description": "История цели",
                        "nullable": true,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/HistoryEntity"
                        }
                    },
                    "achievedTimestamp": {
                        "type": "number",
                        "description": "Время завершения цели",
                        "nullable": true
                    },
                    "deadlineTimestamp": {
                        "type": "number",
                        "description": "Время дедлайна цели",
                        "nullable": true
                    }
                },
                "required": [
                    "id",
                    "type",
                    "title",
                    "status"
                ]
            },
            "AllHistoryDto": {
                "type": "object",
                "properties": {
                    "history": {
                        "type": "object",
                        "description": "Полная история",
                        "additionalProperties": {
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/HistoryGoalDto"
                            }
                        }
                    }
                },
                "required": [
                    "history"
                ]
            },
            "StatisticsDto": {
                "type": "object",
                "properties": {
                    "statistics": {
                        "type": "array",
                        "description": "Статистика",
                        "items": {
                            "type": "object",
                            "properties": {
                                "timestamp": {
                                    "type": "number"
                                },
                                "goalsCompleted": {
                                    "type": "number"
                                },
                                "habitsCompleted": {
                                    "type": "number"
                                },
                                "tasksCompleted": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                },
                "required": [
                    "statistics"
                ]
            }
        }
    }
}